<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.ColumnConstraints?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/javafx"
      fx:controller="com.example.fis_practica_1.simulacionController"
      style="-fx-background-color: rgba(101,53,154,0.53);
             -fx-border-color: rgb(74,47,106);
             -fx-border-width: 10px;">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Título centrado -->
    <Label text="Simulador de recorrido"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>

    <!-- Contenedor para los círculos -->
    <StackPane fx:id="panePrincipal" prefWidth="800" prefHeight="400"
               style="-fx-border-color: rgba(46,6,87,0.53); -fx-border-width: 0px;"/>

    <!-- Contenedor centrado para el panel inferior -->
    <StackPane>
        <HBox alignment="CENTER" spacing="50">
            <!-- Información de asientos -->
            <StackPane prefWidth="320" prefHeight="100"
                       style="-fx-background-color: rgb(120,79,181);
                  -fx-border-color: rgb(120,79,181);
                  -fx-border-radius: 15;
                  -fx-background-radius: 5;
                  -fx-padding: 8;
                  -fx-border-width: 3px;">
                <GridPane hgap="8" vgap="4" alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER"/>
                        <ColumnConstraints hgrow="NEVER"/>
                    </columnConstraints>

                    <Label text="METRO" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"
                           style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #ffffff;"
                           maxWidth="Infinity" alignment="CENTER"/>

                    <!-- Asientos Ocupados en fila 1 -->
                    <Label text="Asientos Ocupados:" style="-fx-font-weight: bold; -fx-font-size: 20px; -fx-text-fill:
                    #ffffff" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <Label fx:id="asientosOcupados" text="0/40" style="-fx-font-weight: bold; -fx-text-fill: #ffffff;
                    -fx-font-size: 20px" GridPane.rowIndex="1" GridPane.columnIndex="1"/>


                    <!--
                    <Label text="Asientos Disponibles:" style="-fx-font-weight: bold;" GridPane.rowIndex="2"/>
                    <Label fx:id="asientosDisponibles" text="40" style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    -->
                </GridPane>

            </StackPane>


            <!-- Botón de inicio -->
            <Button text="INICIAR"
                    style="-fx-font-size: 23px; -fx-font-weight: bold; -fx-font-family: 'Arial'; -fx-background-color: #6a1b9a; -fx-text-fill: white; -fx-padding: 10 25; -fx-background-radius: 5;"
                    prefWidth="220" prefHeight="100" alignment="CENTER"
                    fx:id="botonInicio" onAction="#btnEjecucionSimulacion"/>


        </HBox>
    </StackPane>

</VBox>
